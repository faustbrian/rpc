{
  "name": "cline/rpc",
  "description": "RPC implementation for PHP supporting JSON-RPC 2.0 and XML-RPC with OpenRPC specification support",
  "license": "MIT",
  "keywords": [
    "php",
    "rpc",
    "json-rpc",
    "xml-rpc",
    "openrpc",
    "api",
    "laravel",
    "json-rpc-2.0",
    "xml-rpc-spec",
    "rpc-server",
    "specification"
  ],
  "authors": [
    {
      "name": "Brian Faust",
      "email": "brian@cline.sh"
    }
  ],
  "require": {
    "php": "^8.5.0",
    "cline/open-rpc": "^1.2.0",
    "illuminate/bus": "^12.28",
    "illuminate/http": "^12.28",
    "illuminate/support": "^12.28",
    "illuminate/validation": "^12.28",
    "saloonphp/saloon": "^3.14.2",
    "saloonphp/xml-wrangler": "^1.4.1",
    "spatie/laravel-data": "^4.18.0",
    "symfony/intl": "^7.4.0"
  },
  "require-dev": {
    "cline/coding-standard": "^1.6.3",
    "ergebnis/composer-normalize": "^2.48.2",
    "orchestra/testbench": "^8.0 || ^9.0 || ^10.8",
    "pestphp/pest": "^4.2.0",
    "pestphp/pest-plugin-laravel": "^4.0",
    "pestphp/pest-plugin-type-coverage": "^4.0.3",
    "symfony/var-dumper": "^6.0 || ^7.4"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Cline\\RPC\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "ergebnis/composer-normalize": true,
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "lint": "ecs check --fix",
    "refactor": "rector",
    "test": [
      "@test:lint",
      "@test:type-coverage",
      "@test:unit",
      "@test:types",
      "@test:refactor"
    ],
    "test:lint": "ecs check",
    "test:refactor": "rector --dry-run",
    "test:type-coverage": "php -d memory_limit=1G vendor/bin/pest --parallel --min=80 --type-coverage",
    "test:types": "phpstan",
    "test:unit": "pest --parallel --min=80 --coverage"
  }
}
